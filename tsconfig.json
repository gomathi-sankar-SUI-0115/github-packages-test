{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "types": ["node", "jest"],
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
